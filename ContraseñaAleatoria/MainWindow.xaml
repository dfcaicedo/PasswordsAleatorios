<Window x:Class="ContraseñaAleatoria.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContraseñaAleatoria"
        mc:Ignorable="d"
        Title="Contraseña Aleatoria" Width="290" Height="140">
    <StackPanel>
        <TextBox Name="Password" Margin="10" FontSize="32" IsReadOnly="True" TextAlignment="Center" FontFamily="Courier New" FontWeight="SemiBold"  ></TextBox>
        <Border Background="LightGray" CornerRadius="15" Margin="5" HorizontalAlignment="Center" BorderBrush="LightGray" BorderThickness="2" Padding="2">
            <Button Content="Generar" BorderThickness="0" FontSize="16" Click="Button_Click"></Button>
        </Border>
        
    </StackPanel>
</Window>
